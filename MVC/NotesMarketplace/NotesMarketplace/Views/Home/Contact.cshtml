@model NotesMarketplace.Models.ContactUs

<!-- Contact Us Section -->
<div id="generic-container">

    <div id="component-box" class="contact-us-page">

        <!-- Background image with some text -->
        <div class="general-bg-img">
            <h3 class="text-center">Contact Us</h3>
        </div>

        <div id="contact-us-form">

            <!-- Form Area -->
            <div id="user-profile-form" class="profile-wrapper">

                @using (Html.BeginForm("Contact", "Home", FormMethod.Post, new {}))
                {

                    <div class="container">

                        <!-- Get in touch -->
                        <div id="basic-profile-details" class="info-components">
                            <div class="row">

                                <div class="col-md-12">

                                    @if (TempData["internetnotconnected"] != null)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <strong>@TempData["internetnotconnected"] !</strong> You Are Offline, Please Check Your Internet!
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    }

                                    @if (TempData["success"] != null)
                                    {
                                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                                            <strong>@TempData["success"] !</strong> Your Request has been Successfully sent !
                                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                    }

                                </div>
                                <div class="horizontal-heading col-md-12 col-sm-12 col-xs-12">
                                    <h3>Get In Touch</h3>
                                    <p class="form-text">Let us know how to get back to you</p>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                     @if (User.Identity.IsAuthenticated)
                                     {
                                         <div class="form-group">
                                             <label>Full Name *</label>
                                             @Html.TextBoxFor(x => x.FullName, new {@class = "form-control", @value = @Model.FullName, @readonly = "readonly"})
                                         </div>
                                         <div class="form-group">
                                             <label>Email Address *</label>
                                             @Html.TextBoxFor(x => x.EmailID, new {@class = "form-control", @value = @Model.EmailID, @readonly = "readonly"})
                                         </div>
                                     }
                                     else
                                     {
                                         <div class="form-group">
                                             <label>Full Name *</label>
                                             @Html.TextBoxFor(x => x.FullName, new {@class = "form-control", @placeholder = "Enter Your Full Name"})
                                             <small>@Html.ValidationMessageFor(model => model.FullName, "", new {@class = "text-danger error-message" })</small>
                                         </div>
                                         <div class="form-group">
                                             <label>Email Address *</label>
                                             @Html.TextBoxFor(x => x.EmailID, new {@class = "form-control", @placeholder = "Enter Your Email Address"})
                                         <small>@Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger error-message" })</small>
                                         </div>
                                     }
                                     <div class="form-group">
                                         <label>Subject *</label>
                                         @Html.TextBoxFor(x => x.Subject, new { @class = "form-control", @placeholder = "Enter Your Subject" })
                                         <small>@Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger error-message" })</small>
                                     </div>
                                </div>
                                <div class="col-md-6 col-sm-6 col-xs-6">
                                    <div class="form-group comment">
                                        <label>Comments / Questions *</label>
                                        @Html.TextAreaFor(x => x.Comments, new { @class = "form-control", rows = "8", @placeholder = "Comments..." })
                                        <small>@Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger error-message" })</small>
                                    </div>
                                 </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 col-sm-12 col-xs-12">
                                    <button type="submit" class="btn-general btn-submit-form mr-3">submit</button>
                                </div>
                            </div>

                        </div>

                    </div>

                }

            </div>

        </div>
    </div>
</div>