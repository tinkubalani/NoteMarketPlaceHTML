@model NotesMarketplace.Models.ChangePassword
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">

    <!-- Title -->
    <title>Change Password</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Front/images/favicon/favicon.ico">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/Front/css/font-awesome/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/responsive.css">

</head>

<body>

    <div class="login-page">

        <div class="login-general-box">

            <div class="login-wrapper">

                <div id="top-logo" class="text-center">
                    <img src="~/Content/Front/images/login/top-logo.png" class="img-responsive" alt="top-logo">
                </div>

                <div id="login-form-container" class="generic-form">

                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { }))
                    {
                        <h3 class="text-center">Change Password</h3>
                        <p class="text-center">Enter your new password to change your password</p>

                        <!-- Password -->
                        <div class="form-group">

                            <label for="exampleInputPassword1">Old Password</label>

                            <div class="password-container">
                                @Html.PasswordFor(x => x.OldPassword, new { id = "old-password", @class = "form-control", @placeholder = "Enter Your Old Password" })
                                <div class="login-eye">
                                    <i class="fa fa-eye-slash toggle-password" toggle="#old-password"></i>
                                </div>
                                <small>@Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger error-message" })</small>
                                @if (@TempData["Password-Incorrect"] != null)
                                {
                                    <small class="text-danger">@TempData["Password-Incorrect"]</small>
                                }
                            </div>

                        </div>

                        <!-- New Password -->
                        <div class="form-group">

                            <label for="exampleInputPassword1"> New Password</label>

                            <div class="password-container">
                                @Html.PasswordFor(x => x.NewPassword, new { id = "new-password", @class = "form-control", @placeholder = "Enter Your New Password" })
                                <div class="login-eye">
                                    <i class="fa fa-eye-slash toggle-password" toggle="#new-password"></i>
                                </div>
                            </div>
                            <small>@Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger ErrorMessage" })</small>

                        </div>

                        <!-- Confirm Password -->
                        <div class="form-group">

                            <label for="exampleInputPassword1">Confirm Password</label>

                            <div class="password-container">
                                @Html.PasswordFor(x => x.ConfirmPassword, new { id = "confirm-password", @class = "form-control", @placeholder = "Enter Your Confirm Password" })
                                <div class="login-eye">
                                    <i class="fa fa-eye-slash toggle-password" toggle="#confirm-password"></i>
                                </div>
                                <small>@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger ErrorMessage" })</small>
                            </div>

                        </div>

                        <button type="submit" class="btn btn-general" id="change-pw-submit-btn" title="Submit" role="button"><span>Submit</span></button>

                    }

                </div>

            </div>

        </div>

    </div>

    <!-- Jquery -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/js/script.js"></script>
    
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>