@model NotesMarketplace.Models.UserLogin
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Important meta tags -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">

    <!-- Title -->
    <title>Notes Marketplace | Login</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/Front/images/favicon/favicon.ico">

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">

    <!-- Fontawesome -->
    <link rel="stylesheet" href="~/Content/Front/css/font-awesome/font-awesome.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/bootstrap/bootstrap.min.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/style.css">

    <!-- Responsive CSS -->
    <link rel="stylesheet" href="~/Content/Front/css/responsive.css">

</head>

<body>

    <!-- Pre loader -->
    <div id="preloader">
        <div id="status">&nbsp;</div>
    </div>

    <section id="login-page">

        <div class="login-general-box">

            <div class="login-wrapper">

                <div id="top-logo" class="text-center">
                    <img src="~/Content/Front/images/login/top-logo.png" class="img-responsive" alt="top-logo">
                </div>

                <div id="login-form-container" class="generic-form">

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { }))
                    {
                        @Html.AntiForgeryToken() //Using AntiForgeryToken to Prevent Cross-Site Request Forgery (CSRF) Attacks.
                        <h3 class="text-center">Login</h3>
                        <p class="text-center">Enter your email address and password to login</p>
                        if (@TempData["Error"] != null)
                        {
                            <h6 class="text-danger">@TempData["Error"]</h6>
                        }
                        if (@TempData["Message"] != null)
                        {
                            <h6 class="text-success">@TempData["Message"]</h6>
                        }
                <div class="form-group">
                    <label for="exampleInputEmail1">Email</label>
                    @Html.TextBoxFor(x => x.EmailID, new { @class = "form-control", @placeholder = "Enter Your Email" })
                    <small>@Html.ValidationMessageFor(model => model.EmailID, "", new { @class = "text-danger error-message" })</small>
                </div>

                        <div class="form-group">

                            <label for="exampleInputPassword1">Password</label><a href="/account/forgotpassword">Forgot Password?</a>
                            <div class="password-container">
                                @Html.PasswordFor(x => x.Password, new { id = "login-password", @class = "form-control", @placeholder = "Enter Your Password" })
                                <div class="login-eye">
                                    <i class="fa fa-eye-slash toggle-password" toggle="#login-password"></i>
                                </div>
                            </div>


                            <small id="emailHelp">@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger error-message" })</small>

                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    @Html.CheckBoxFor(x => x.RememberMe)
                                    <label>Remember Me</label>
                                </div>
                            </div>

                        </div>

                        <button class="btn btn-general" id="login-btn" href="#" title="LOGIN" role="button"><span>Login</span></button>

                    }

                    <p class="text-center">
                        Don't have an account?

                        <!-- Sign Up Link -->
                        <a href="/account/register">Sign Up</a>
                    </p>

                </div>
            </div>

        </div>

    </section>


    <!-- Jquery -->
    <script src="~/Scripts/js/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/Scripts/js/bootstrap/bootstrap.min.js"></script>

    <!-- Custom JS -->
    <script src="~/Scripts/js/script.js"></script>

    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

</body>

</html>