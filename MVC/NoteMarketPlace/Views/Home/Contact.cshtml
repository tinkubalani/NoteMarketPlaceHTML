                    </div>

                </div>
            </div>
        </nav>
        <!-- Navigation Section Ends -->

    </section>
    <!-- Header Section Ends -->
    <!-- Contact Us Section -->
    <div id="generic-container">

        <div id="component-box" class="contact-us-page">

            <!-- Background image with some text -->
            <div class="general-bg-img">
                <h3 class="text-center">Contact Us</h3>
            </div>

            <div id="contact-us-form">

                <!-- Form Area -->
                <div id="user-profile-form" class="profile-wrapper">

                    <form>

                        <div class="container">

                            <!-- Get in tuch -->
                            <div id="basic-profile-details" class="info-components">
                                <div class="row">
                                    <div class="horizontal-heading col-md-12 col-sm-12 col-xs-12">
                                        <h3>Get In Touch</h3>
                                        <p class="form-text">Let us know how to get back to you</p>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group">
                                            <label>Full Name *</label>
                                            <input type="text" class="form-control" placeholder="Enter Your full name">
                                        </div>
                                        <div class="form-group">
                                            <label>Email Address *</label>
                                            <input type="text" class="form-control" placeholder="Enter Your email address">
                                        </div>
                                        <div class="form-group">
                                            <label>Subject *</label>
                                            <input type="text" class="form-control" placeholder="Enter Your subject">
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-sm-6 col-xs-6">
                                        <div class="form-group comment">
                                            <label>Comments / Questions *</label>
                                            <textarea class="form-control" placeholder="comments..."></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 col-sm-12 col-xs-12">
                                        <button class="btn-general btn-submit-form mr-3">submit</button>
                                    </div>
                                </div>

                            </div>

                        </div>

                    </form>

                </div>

            </div>
        </div>
    </div>

